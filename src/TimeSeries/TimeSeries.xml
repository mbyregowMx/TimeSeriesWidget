<?xml version="1.0" encoding="utf-8" ?>
<widget id="TimeSeries.widget.TimeSeries" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>TimeSeries</name>
    <description>Renders multiple graph sources in a single time series graph</description>

    <icon />

    <properties>
        <property key="graphTitle" type="attribute">
            <caption>Title</caption>
            <category>Appearance</category>
            <description></description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="graphSourceURL" type="attribute" isPath="yes" pathType="referenceSet">
            <caption>URL</caption>
            <category>Graph source</category>
            <description></description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="graphSourceIsStacked" type="attribute" isPath="yes" pathType="referenceSet">
            <caption>Is stacked?</caption>
            <category>Graph source</category>
            <description></description>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="graphSourceCaption" type="attribute" isPath="yes" pathType="referenceSet">
            <caption>Caption</caption>
            <category>Graph source</category>
            <description></description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
    </properties>
</widget>

