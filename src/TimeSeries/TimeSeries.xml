<?xml version="1.0" encoding="utf-8" ?>
<widget id="TimeSeries.widget.TimeSeries" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>TimeSeries</name>
    <description>Renders a graph</description>

    <icon />

    <properties>
        <property key="dataPeriod" type="enumeration" defaultValue="auto">
            <caption>Data period</caption>
            <category>Appearance</category>
            <description>What time frame does this data show?</description>
            <enumerationValues>
                <enumerationValue key="auto">Automatically</enumerationValue>
                <enumerationValue key="hour">Hour</enumerationValue>
                <enumerationValue key="day">Day</enumerationValue>
                <enumerationValue key="week">Week</enumerationValue>
                <enumerationValue key="month">Month</enumerationValue>
                <enumerationValue key="year">Year</enumerationValue>
            </enumerationValues>
        </property>
        <property key="graphSourceURL" type="attribute" >
            <caption>URL</caption>
            <category>Graph source</category>
            <description>URL that replies with a JSON</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
    </properties>
</widget>

